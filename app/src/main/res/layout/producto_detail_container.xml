<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true"
    android:layout_marginLeft="1dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:state_hovered="true"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="3dp"
    android:layout_marginRight="1dp">
    <LinearLayout
        android:id="@+id/anim"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imagen"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@mipmap/list_products"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="Codigo: "
                    android:textColor="#000000"
                    android:textSize="20sp" />
            <TextView
                android:id="@+id/codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:state_hovered="true"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="Nombre: "
                    android:textColor="#000000"
                    android:textSize="17sp" />
            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:state_hovered="true"
                android:text=""
                android:textColor="#000000"
                android:textSize="17sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:state_hovered="true"
                    android:text="Cantidad: "
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:state_hovered="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/unidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:state_hovered="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="Costo: "
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/costeP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="Precio: "
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="IVA: "
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/iva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/opciones"
            android:layout_marginTop="5dp"
            android:animateLayoutChanges="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/eliminar"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="3dp"
                android:layout_marginRight="@dimen/agregar_margin_espacio"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="26dp"
                    android:background="@color/error"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:src="@mipmap/eliminar_adaptive_fore"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="Elmiminar"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/editar"
                android:layout_width="wrap_content"

                android:layout_height="40dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/editar_adaptive_fore" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Editar"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>