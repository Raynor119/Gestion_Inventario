<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true"
    android:layout_marginLeft="1dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:state_hovered="true"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="3dp"
    android:layout_marginRight="1dp">
    <LinearLayout
        android:id="@+id/anim"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:gravity="">


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/codigo"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamano_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="Papa-Pastusa"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamano_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="5 Kg"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamano_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="$ 2,000,000"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamano_de_texto" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:state_hovered="true"
                    android:text="$ 1,500,000"
                    android:textColor="#000000"
                    android:textSize="@dimen/tamano_de_texto" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/opciones"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    card_view:cardBackgroundColor="#EDEDED"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/menos"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            card_view:cardBackgroundColor="#EDEDED"
                            card_view:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:padding="8dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@mipmap/menos" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/cantidadmod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp">
                        </TextView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/mas"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            card_view:cardBackgroundColor="#EDEDED"
                            card_view:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:padding="8dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@mipmap/mas" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="60dp"
                android:gravity="right">

                <androidx.cardview.widget.CardView
                    android:id="@+id/eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/eliminar_adaptive_fore" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>